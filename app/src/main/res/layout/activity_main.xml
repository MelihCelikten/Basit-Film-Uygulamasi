<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#15152C"
    tools:context=".View.MainActivity">


    <Button
        android:id="@+id/e_mail_button_ana_sayfa"
        style="@style/FirebaseUI.Button.AccountChooser"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:backgroundTint="#000000"
        android:text="E-MAİL İLE GİRİŞ YAPIN VEYA KAYDOLUN"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:icon="@drawable/ic_baseline_local_post_office_24"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/e_mail_button_ana_sayfa2"
        style="@style/FirebaseUI.Button.AccountChooser"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:text="FARKLI BİR HESAPLA GİRİŞ YAPIN &amp; KAYDOLUN"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:icon="@drawable/ic_baseline_open_in_new_24"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.62" />

    <ProgressBar
        android:id="@+id/progressBar_main"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>